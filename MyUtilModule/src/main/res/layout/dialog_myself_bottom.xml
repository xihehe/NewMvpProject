<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/transparent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:background="@drawable/circle_half_dialog_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_80px"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/margin_20px"
            android:text="123123"
            android:textSize="@dimen/txt_size_34px"
            android:textColor="@color/A333333"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/content"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/A4D4D4D"
                android:textSize="@dimen/txt_size_28px"
                android:lineSpacingMultiplier="1.5"
                android:minHeight="@dimen/height_160px"
                android:paddingBottom="15.0dip"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:paddingTop="15.0dip"
                />

                    </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                style="@style/DividerHorizontalBlack" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_90px"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/positiveButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:textColor="@color/A4D4D4D"
                    android:textSize="@dimen/txt_size_32px"
                    android:text="确定" />


                <View
                    style="@style/DividerVerticalBlack" />

                <TextView
                    android:id="@+id/negativeButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:textColor="@color/A4D4D4D"
                    android:textSize="@dimen/txt_size_32px"
                    android:text="取消" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>