<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
     </style>
    <!-- 隐藏状态栏-->
<!--        <item name="android:windowFullscreen">true</item> -->



    <style name="TextSize_big_more">

        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">@dimen/txt_size_40px</item><!-- txt_size_42px-->
    </style>

    <style name="TextSize_big">
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">@dimen/txt_size_36px</item><!-- txt_size_38px-->
    </style>

    <style name="TextSize_Normal">
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">@dimen/txt_size_32px</item><!-- txt_size_34px-->
    </style>

    <style name="TextSize_little">
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">@dimen/txt_size_28px</item><!-- txt_size_30px-->
    </style>

    <style name="TextSize_more_little">
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">@dimen/txt_size_24px</item><!-- txt_size_26px-->
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="edittext_my">
        <item name="android:textSize">@dimen/txt_size_28px</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="DividerHorizontalWhite">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DividerHorizontalBlack">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="DividerVerticalBlack">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>



</resources>
