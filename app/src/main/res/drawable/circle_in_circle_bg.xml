<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- outer circle -->

    <!-- inner shadow of outer circle -->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- center circle -->
    <item
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="@color/universal_zise"/>
            <gradient
                android:angle="270"
                android:endColor="@color/white"
                android:startColor="@color/white" />
        </shape>
    </item>

</layer-list>